<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Include a Toolbar as previously discussed
    android:layout_below="@id/toolbar"-->
    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/addPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photo"
        android:layout_below="@id/photoImageView"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/removePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Photo"
        android:layout_below="@id/photoImageView"
        android:layout_toRightOf="@id/addPhotoButton"/>

    <Button
        android:id="@+id/nextPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@id/addPhotoButton"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/prevPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:layout_below="@id/removePhotoButton"
        android:layout_toLeftOf="@id/nextPhotoButton"/>

    <TextView
        android:id="@+id/albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
